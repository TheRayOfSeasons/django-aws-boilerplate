{% macro styled_form(form) %}
  <form action="." method="POST">
    {% csrf_token %}

    {% for field in form %}
      <fieldset>
        <label for="{{ field.id_for_label }}">{{ field.label }}</label>
        {% if field.field.required %}
          <em>*</em>
        {% endif %}
        {{ field }}
        {% for error_message in field.errors %}
          {{ error_message }}
        {% endfor %}
      </fieldset>
    {% endfor %}

  </form>
{% endmacro %}
